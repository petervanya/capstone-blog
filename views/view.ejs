<%- include('partials/header') %>

<div class="container">
  <div class="article-header">
    <h1><%= post.title %></h1>
    <p class="article-meta">
      Created: <%= new Date(post.created_at).toLocaleString() %>
      <% if (post.updated_at && post.updated_at !== post.created_at) { %>
        | Updated: <%= new Date(post.updated_at).toLocaleString() %>
      <% } %>
    </p>
  </div>

  <article class="article-content">
    <%- postHtml %>
  </article>

  <div class="article-actions">
    <a href="/" class="btn btn-secondary">‚Üê Back to All Articles</a>
    <a href="/edit/<%= post.id %>" class="btn btn-edit">Edit Article</a>
    <form action="/delete/<%= post.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this article?')">
      <button type="submit" class="btn btn-delete">Delete Article</button>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
